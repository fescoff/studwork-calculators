.sw-check
  display inline-flex
  align-items center
  vertical-align middle

  &__inner
    position relative
    display inline-flex
    flex-grow 0
    flex-shrink 0
    width $space-2
    height $space-2
    border-radius $rad-0
    background $c-gray-2
    color $c-white
    transition background $transition
    user-select none

  &:hover &__inner
    background-color lighten($c-gray-2, 15%)

  &_inactive
    opacity 0.4
    cursor not-allowed

    input
      cursor not-allowed

  &_checked &__inner
    background $c-blue-1

  &_checked:hover &__inner
    background-color lighten($c-blue-1, 15%)

  &__icon-checked
  &__icon-pending
    position absolute
    top 0
    left 0
    padding 0.25rem

  &__icon-pending
    rotating()

  &__label
    margin-left 1rem
    flex-grow 1

  input
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 10
    margin 0
    width 100%
    height 100%
    border 0
    opacity 0
    cursor pointer
    -webkit-appearance none
