.sw-radio
  display inline-flex
  align-items center
  cursor pointer
  transition background $transition
  user-select none
  line-height 2.2rem

  .btn
    position relative
    width 2.2rem
    height 2.2rem
    border-radius 50%
    flex-shrink 0

    &:hover
      background lighten($c-gray-2, 5%)

    &.checked
      background $c-blue-1

      &:hover
        background darken($c-blue-1, 5%)

  &.inactive
    opacity 0.4

    &
    input
      cursor not-allowed

  .label
    margin-left $space-0

  input
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 10
    margin 0
    width 100%
    height 100%
    border 0
    opacity 0
    cursor pointer
    -webkit-appearance none

  .circle
    width 100%
    height 100%
    border 0.6rem solid $c-blue-1
    border-radius 50%
    background $c-white

  .pending
    position absolute
    width 2.2rem
    height 2.2rem
    padding 0.5rem
    top 0
    left 0
    color $c-white
    transform translate(-50%, -50%)
    rotating()

  @import './colors.styl'
